{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "@testing-library/jest-dom",
      "vitest/globals"
    ],
    "sourceMap": true,
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*"
  ]
}